<table class='table'>
  <tr><%= image_tag @user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
  <tr>
    <th>follows:</th>
    <td><%= link_to user.followings.count, user_followings_path(@user) %></td>
  </tr>
  <tr>
    <th>followers:</th>
    <td><%= link_to user.followers.count, user_followers_path(@user) %></td>
  </tr>
  <tr>
    <% if not @user == current_user %>
      <% if current_user.following?(user) %>
        <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info" %></td>
      <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success'%></td>
      <% end %>
    <% end %>
  </tr>
</table>
　
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>